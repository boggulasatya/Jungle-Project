<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
<h2>Order Details</h2>
<table class="table table-bordered">
<thead>
<tr>
  <th>Image</th>
  <th>Name</th>
  <th>Description</th>
  <th>Quantity</th>
  <th>Line Item Total</th>
</tr>
</thead>
<tbody>
<% @order.line_items.each do |line_item| %>
  <tr>
  <td><%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name %></td>
  <td><%= line_item.product.name %></td>
  <td><%= line_item.product.description %></td>
  <td><%= line_item.quantity %></td>
  <td><%= humanized_money_with_symbol line_item.total_price %></td>
</tr>
<% end %>
</tbody>
</table>
<p><strong>Final Amount:</strong> <%= humanized_money_with_symbol @order.total %></p>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
